{
  "configurations": {
    "cpp,c,rust:launch": {
      "adapter": "codelldb",
      "filetypes": ["cpp", "c", "rust"],
      "configuration": {
        "request": "launch",
        "program": "${fileDirname}/output/${fileBasenameNoExtension}",
        "cwd": "${workspaceRoot}",
        "environment": [],
        "externalConsole": true,
        "stopAtEntry": true,
        "MIMode": "lldb"
      }
    },
    "python:launch": {
      "adapter": "debugpy",
      "configuration": {
        "name": "Python",
        "type": "python",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal",
        "justMyCode": false,
        "stopOnEntry": true,
        "cwd": "${workspaceRoot}"
      }
    }
  }
}
